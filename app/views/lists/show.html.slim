  - @rows.each do |row|
    tr
      td.theme align="center"
        = row[:theme]
      = content_tag :td, id: "card_name#{row[:id]}", class: "card_name", data: {valid: "#{row[:valid]}", id: "#{row[:id]}", equality: "#{row[:equality]}", updatable: "#{row[:updatable]}"} do
        .tooltip id="popup#{row[:id]}" title=""
          = link_to row[:name], row[:url]
      td
        span id="refresh#{row[:id]}" class="refresh"
          i.fa.fa-refresh
        span id="refresh_spinner#{row[:id]}" class="refresh_spinner"
          i.fa.fa-refresh.fa-spin
      td id="estimated#{row[:id]}" class="estimated"
        = row[:estimated]
      td.tooltip title="#{row[:factor_time_spent]}" id="spent#{row[:id]}" class="spent"
        = row[:spent]
      td.tooltip title="#{row[:factor_time_offhour]}" id="offhour#{row[:id]}" class="offhour"
        = row[:offhour]
      td.tooltip title="#{row[:factor_time_bugfix]}" id="bugfix#{row[:id]}" class="bugfix"
        = row[:bugfix]
      td
        span id="upload#{row[:id]}" class="upload"
          i.fa.fa-upload
        span id="upload_spinner#{row[:id]}" class="upload_spinner"
          i.fa.fa-refresh.fa-spin
